{% if iptables_flush_all %}
# Clean all
iptables -F
iptables -X
iptables -t nat -F
iptables -t nat -X
iptables -t mangle -F
iptables -t mangle -X
{% endif %}

# Accept all from localhost
iptables -A INPUT -i lo -j ACCEPT

# Allow established connections:
iptables -A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
