*filter

####base####
# Accept all from localhost
-A INPUT -i lo -j ACCEPT

# Allow established connections:
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT

# Accept icmp ping requests.
-A INPUT -p icmp -j ACCEPT

{% if iptables_accept_rules_enable %}
{% for iptables_rule in iptables_accept_rules %}
####{{ iptables_rule.name }}####
{% for target in iptables_rule.targets %}
-A INPUT -s {{ target }} -j ACCEPT
{% endfor %}
{% endfor %}
{% endif %}

{% if iptables_drop_rules_enable %}
{% for iptables_rule in iptables_drop_rules %}
####{{ iptables_rule.name }}####
{% for target in iptables_rule.targets %}
-A INPUT -s {{ target }} -j DROP
{% endfor %}
{% endfor %}
{% endif %}

# Allowed ports.
{% for port in iptables_allowed_tcp_ports %}
iptables -A INPUT -p tcp -m tcp --dport {{port}} -j ACCEPT
{% endfor %}
{% for port in iptables_allowed_udp_ports %}
iptables -A INPUT -p udp -m udp --dport {{port}} -j ACCEPT
{% endfor %}

{% if iptables_logging %}
# Logging
-A INPUT -m limit --limit 15/minute -j LOG --log-level 7 --log-prefix "Dropped by iptables: "
{% endif %}

{% if iptables_deny_all %}
# Drop all other
-A INPUT -j DROP
{% endif %}

COMMIT
